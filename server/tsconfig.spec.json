{
  "include": [
    "src/**/*spec*"
  ],
  "exclude": [
    "*node_modules*"
  ],
  "compileOnSave": false,
  "compilerOptions": {
    "strict": true,
    "rootDir": "src",
    "outDir": ".build",
    "sourceMap": false,
    "inlineSources": false,
    "moduleResolution": "node",
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "dom",
      "es5",
      "es6",
      "es7",
      "es2015",
      "es2016",
      "es2017"
    ]
  }
}
