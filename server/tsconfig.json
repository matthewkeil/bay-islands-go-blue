{
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/**/*spec*",
    "node_modules/**/*"
  ],
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": "src",
    "outDir": ".build",
    "sourceMap": true,
    "inlineSources": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es6",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "dom",
      "es5",
      "es6",
      "es7",
      "es2015",
      "es2016",
      "es2017"
    ]
  }
}
